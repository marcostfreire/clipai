# Backend environment variables
# Copy to .env and fill with your values.

# RunPod (GPU worker)
RUNPOD_API_KEY=
RUNPOD_PROJECT_ID=
RUNPOD_SSH_HOST=
RUNPOD_SSH_TCP_HOST=
RUNPOD_SSH_TCP_PORT=
RUNPOD_IMAGE_TEMPLATE=

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/clipai
REDIS_URL=redis://localhost:6379/0

# AI services
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:4b

# Storage and limits
STORAGE_PATH=./storage/videos
MAX_VIDEO_SIZE_MB=500
MAX_VIDEO_DURATION_SEC=3600
FRAMES_PER_SECOND=0.2
CLIP_MIN_DURATION=30
CLIP_MAX_DURATION=60
MIN_VIRALITY_SCORE=5.0
SUBTITLE_DELAY_SECONDS=0.0
AI_BATCH_SIZE=5

# Celery / worker
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Auth
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRES_MINUTES=30

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/callback

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_FREE=
STRIPE_PRICE_STARTER=
STRIPE_PRICE_PRO=
